<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/CenteredLayout">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:contentDescription="App Logo"
        android:scaleType="centerCrop"
        android:src="@drawable/abasiclogo" />

    <!-- App Title -->
    <TextView
        android:id="@+id/tvTitle"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="A-Basic"
        android:textAlignment="center"
        android:textSize="35sp" />

    <!-- Horizontal Layout for Login & Sign Up -->
    <LinearLayout
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Login Button -->
        <Button
            android:id="@+id/btnLogin"
            style="@style/WelcomeBtn"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Login"
            app:cornerRadius="100dp" />

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/btnSignup"
            style="@style/WelcomeBtn"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Sign Up"
            app:cornerRadius="100dp" />
    </LinearLayout>

    <!-- Retrieve Account Clickable Text -->
    <TextView
        android:id="@+id/tvRetrieveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retrieve Account?"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="20dp"/>
</LinearLayout>
